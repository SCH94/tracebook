<%= form_for [commentable.author, commentable, commentable.comments.build],
    :html => { class: "comment-form padding-top" }, remote: true do |f| %>
  <%= f.text_area :body, placeholder: "Write a comment", rows: 3 %>
  <%= link_to "Cancel", '#', class: "cancel-comment" %>
  <%= f.submit "Comment", class: "btn btn-md btn-primary pull-right" %>
<% end %>
